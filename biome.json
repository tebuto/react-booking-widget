{
    "$schema": "https://biomejs.dev/schemas/2.3.2/schema.json",
    "assist": { "actions": { "source": { "organizeImports": "on" } } },
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "indentWidth": 4,
        "indentStyle": "space",
        "lineWidth": 120,
        "includes": ["**", "!**/node_modules/**", "!**/dist/**"]
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "style": {
                "useImportType": "off",
                "useNodejsImportProtocol": "off"
            },
            "complexity": {
                "noForEach": "off",
                "noBannedTypes": "off"
            },
            "suspicious": {
                "noExplicitAny": "off",
                "noThenProperty": "off",
                "noArrayIndexKey": "off"
            },
            "a11y": {
                "useKeyWithClickEvents": "off"
            },
            "correctness": {
                "useExhaustiveDependencies": "off"
            }
        },
        "includes": ["**", "!**/node_modules/**", "!**/dist/**"]
    },
    "javascript": {
        "parser": {
            "unsafeParameterDecoratorsEnabled": true
        },
        "formatter": {
            "enabled": true,
            "indentStyle": "space",
            "indentWidth": 4,
            "lineWidth": 180,
            "arrowParentheses": "asNeeded",
            "trailingCommas": "none",
            "quoteStyle": "single",
            "semicolons": "asNeeded"
        }
    },
    "json": {
        "formatter": {
            "enabled": true,
            "indentStyle": "space",
            "indentWidth": 4,
            "lineWidth": 180
        },
        "parser": {
            "allowComments": true
        }
    }
}
